client.focused		               $active    $active    $inactive  $active
client.unfocused	               $inactive  $inactive  $active    $inactive
client.focused_inactive	         $inactive  $inactive  #d79921    $inactive
client.urgent  	              	 $inactive  $inactive  #d79921    $inactive

